# Django Settings
# ===============
# Clave secreta de Django. Genera una nueva con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Modo de depuración. Usa 'True' para desarrollo, 'False' para producción
DEBUG=True

# Hosts permitidos. Separa múltiples hosts con comas (ej: localhost,127.0.0.1,example.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# ======================
# Opción 1: Usar DATABASE_URL (recomendado para producción)
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_base_datos
# DATABASE_URL=postgresql://user:password@localhost:5432/homecloud

# Opción 2: Usar configuración individual (si no se usa DATABASE_URL)
# Motor de base de datos: 'sqlite3' o 'postgresql'
DB_ENGINE=sqlite3

# Configuración de PostgreSQL (solo necesario si DB_ENGINE=postgresql)
DB_NAME=homecloud
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
